@{
	if (ViewBag.Count > 0)
	{
		ViewBag.Title = "Nums 1..." + ViewBag.Count;
	}
	else
	{
		ViewBag.Title = "Num 1...N";
	}
}
<h2>@ViewBag.Title</h2>
@if (ViewBag.Count > 0)
{
<ul>
	@for (int i = 0; i <= ViewBag.Count; i++)
	{
		<li>@i</li>
	}
</ul>
}
<form asp-controller="Home" asp-action="NumbersToN" method="post">
	<div>
		<input type="text" name="count" value="" />
		<button type="button" class="btn btn-primary">Submit</button>
	</div>
</form>

