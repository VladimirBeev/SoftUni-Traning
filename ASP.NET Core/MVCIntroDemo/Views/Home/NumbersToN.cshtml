@{
	int count = (int)ViewData["Count"];
	ViewData["Title"] = "Nums 1...";
}
@if (count > 0)
{
	<h2>@ViewData["Title"]@count</h2>
	<ul class="list-group">
		@for (int i = 1; i <= count; i++)
		{
			<li>@i</li>
		}
	</ul>
}
else
{
	<h2>@ViewData["Title"]N</h2>
}
<form  asp-controller="Home" asp-action="NumbersToN" method="post">
		<div class="row">
			<div class="col-2">
				<input class="form-control" type="number" min="0" step="1" name="count">
			</div>
			<div class="col-2">
				<button class="btn btn-primary" value="Submint">Click Me</button>
			</div>
		</div>
</form>